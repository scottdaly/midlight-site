# Server Configuration
PORT=3001
NODE_ENV=development

# Admin Credentials (for error reports admin panel)
ADMIN_USER=admin
ADMIN_PASS=change-this-in-production

# JWT Secrets (generate with: openssl rand -base64 64)
ACCESS_TOKEN_SECRET=your-access-token-secret-here
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here

# Google OAuth (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# OAuth Redirect URLs
DESKTOP_REDIRECT_BASE=midlight://auth/callback
WEB_REDIRECT_BASE=http://localhost:5173
MOBILE_DEEP_LINK_BASE=midlight://s

# LLM Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=...

# Web Search (Tavily - https://tavily.com/)
TAVILY_API_KEY=tvly-...
# SEARCH_CACHE_TTL_MINUTES=15  # Optional, defaults to 15

# CORS (comma-separated origins for production)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Database (optional, defaults to ./server/db/midlight.db)
# DB_PATH=./server/db/midlight.db

# Stripe (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_MONTHLY=price_...
STRIPE_PRICE_YEARLY=price_...

# Mobile Billing Provider Verification
# Set to "false" in production to require provider-backed verification.
MOBILE_BILLING_ALLOW_UNVERIFIED=true

# Apple App Store Server API (StoreKit verification)
APPLE_APP_STORE_ISSUER_ID=
APPLE_APP_STORE_KEY_ID=
# Provide one of:
APPLE_APP_STORE_PRIVATE_KEY=
# APPLE_APP_STORE_PRIVATE_KEY_PATH=/absolute/path/to/AuthKey_XXXXXX.p8
APPLE_APP_BUNDLE_ID=ai.midlight.mobile

# Google Play Developer API (Play Billing verification)
# Provide one of:
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON=
# GOOGLE_PLAY_SERVICE_ACCOUNT_JSON_PATH=/absolute/path/to/service-account.json
GOOGLE_PLAY_PACKAGE_NAME=ai.midlight.mobile

# Mobile device cleanup
MOBILE_DEVICE_STALE_DAYS=60
MOBILE_DEVICE_PRUNE_ON_STARTUP=false

# Cloudflare R2 Storage (https://dash.cloudflare.com/ -> R2)
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=midlight-documents
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# Email (Resend - https://resend.com/api-keys)
RESEND_API_KEY=re_...
EMAIL_FROM=Midlight <noreply@midlight.ai>
