# Server Configuration
PORT=3001
NODE_ENV=development

# Admin Credentials (for error reports admin panel)
ADMIN_USER=admin
ADMIN_PASS=change-this-in-production

# JWT Secrets (generate with: openssl rand -base64 64)
ACCESS_TOKEN_SECRET=your-access-token-secret-here
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here

# Google OAuth (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# OAuth Redirect URLs
DESKTOP_REDIRECT_BASE=midlight://auth/callback
WEB_REDIRECT_BASE=http://localhost:5173

# LLM Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# CORS (comma-separated origins for production)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Database (optional, defaults to ./server/db/midlight.db)
# DB_PATH=./server/db/midlight.db
